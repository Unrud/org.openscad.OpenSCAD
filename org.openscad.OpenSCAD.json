{
    "app-id": "org.openscad.OpenSCAD",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "openscad",
    "rename-appdata-file": "openscad.appdata.xml",
    "rename-desktop-file": "openscad.desktop",
    "rename-icon": "openscad",
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --with-libraries=filesystem,program_options,regex,thread",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install --prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://dl.bintray.com/boostorg/release/1.69.0/source/boost_1_69_0.tar.bz2",
                    "sha256": "8f32d4617390d1c2d16f26a27ab60d97807b35440d45891fa340fc2648b04406"
                }
            ]
        },
        "shared-modules/glew/glew.json",
        "shared-modules/glu/glu-9.0.0.json",
        {
            "name": "freeglut",
            "buildsystem": "cmake",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/freeglut/freeglut/3.0.0/freeglut-3.0.0.tar.gz",
                    "sha256": "2a43be8515b01ea82bcfa17d29ae0d40bd128342f0930cd1f375f1ff999f76a2"
                }
            ]
        },
        {
            "name": "libXmu",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.x.org/archive//individual/lib/libXmu-1.1.2.tar.bz2",
                    "sha256": "756edc7c383254eef8b4e1b733c3bf1dc061b523c9f9833ac7058378b8349d0b"
                }
            ]
        },
        {
            "name": "eigen",
            "builddir": true,
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://bitbucket.org/eigen/eigen/get/3.3.5.tar.gz",
                    "sha256": "0454b6bacafd2bf641e0fb0f59572b9995728b77e41d1b8517f807334d07e68e"
                }
            ]
        },
        {
            "name": "cgal",
            "cleanup": [
                "/bin"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/CGAL/cgal/releases/download/releases%2FCGAL-4.14/CGAL-4.14.tar.xz",
                    "sha256": "59464b1eaee892f2223ba570a7642892c999e29524ab102a6efd7c29c94a29f7"
                }
            ]
        },
        {
            "name": "opencsg",
            "no-autogen": true,
            "no-parallel-make": true,
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.opencsg.org/OpenCSG-1.4.2.tar.gz",
                    "sha256": "d952ec5d3a2e46a30019c210963fcddff66813efc9c29603b72f9553adff4afb"
                },
                {
                    "type": "patch",
                    "path": "opencsg-libs.patch"
                }
            ]
        },
        {
            "name": "qscintilla",
            "buildsystem": "qmake",
            "subdir": "Qt4Qt5",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/pyqt/files/QScintilla2/QScintilla-2.10.8/QScintilla_gpl-2.10.8.tar.gz",
                    "sha256": "46cd5b4e609ca5e13130ba8cc7028d44fd1dc5b037f97c492899006ed0c992eb"
                },
                {
                    "type": "patch",
                    "path": "qscintilla-lib-paths.patch"
                }
            ]
        },
        {
            "name": "double-conversion",
            "buildsystem": "cmake",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/google/double-conversion/archive/v3.1.5.tar.gz",
                    "sha256": "a63ecb93182134ba4293fd5f22d6e08ca417caafa244afaa751cbfddf6415b13"
                }
            ]
        },
        {
            "name": "imagemagick",
            "cleanup": [
                "*"
            ],
            "config-opts": [
                "--enable-static=no",
                "--disable-docs",
                "--disable-deprecated",
                "--without-autotrace",
                "--without-bzlib",
                "--without-djvu",
                "--without-dps",
                "--without-fftw",
                "--without-fontconfig",
                "--without-fpx",
                "--without-freetype",
                "--without-gvc",
                "--without-jbig",
                "--without-jpeg",
                "--without-lcms",
                "--without-lzma",
                "--without-magick-plus-plus",
                "--without-openexr",
                "--without-openjp2",
                "--without-pango",
                "--without-raqm",
                "--without-tiff",
                "--without-webp",
                "--without-wmf",
                "--without-x",
                "--without-xml",
                "--without-zlib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ImageMagick/ImageMagick/archive/7.0.8-56.tar.gz",
                    "sha256": "061b80fdc3dc254acb6d61166162e4cdfed5f1ded19034ca0cc15497c4e19f38"
                }
            ]
        },
        {
            "name": "openscad",
            "buildsystem": "qmake",
            "config-opts": [
                "QMAKE_CFLAGS_ISYSTEM=",
                "QMAKE_LIBDIR=/app/lib",
                "QMAKE_CXXFLAGS+=-fext-numeric-literals"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.openscad.org/openscad-2019.05.src.tar.gz",
                    "sha256": "0a16c4263ce52380819dd91c609a719d38f12f6b8c4da0e828dcbe5b70996f59"
                },
                {
                    "type": "patch",
                    "path": "openscad-appdata.patch"
                }
            ],
            "post-install": [
                "mv /app/share/mime/packages/openscad.xml /app/share/mime/packages/org.openscad.OpenSCAD.xml",
                "sed -i -e 's|<icon name=\"openscad\"/>|<icon name=\"org.openscad.OpenSCAD\"/>|' /app/share/mime/packages/org.openscad.OpenSCAD.xml",
                "for s in {16,32,48,64,128,256,512}; do
                    convert /app/share/pixmaps/openscad.png -resize ${s}x${s} openscad${s}x${s}.png
                    install -Dm644 openscad${s}x${s}.png ${FLATPAK_DEST}/share/icons/hicolor/${s}x${s}/apps/openscad.png
                done"
            ]
        }
    ]
}
